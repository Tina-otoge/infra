server:
  http_listen_address: 127.0.0.1
  http_listen_port: {{ promtail_port }}

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: /var/log/*log
- job_name: caddy
  static_configs:
  - targets:
      - localhost
    labels:
      job: caddy_access_log
      __path__: /var/log/caddy/*.log
  pipeline_stages:
  - json:
      expressions:
        level: level
        ts: time
        logger: logger
        msg: message
        upstream: upstream
        duration: duration
        remote_ip: request.remote_ip
        proto: request.proto
        method: request.method
        host: request.host
        uri: request.uri
        request_headers: request.headers
        response_headers: headers
