{
	debug

	log {
		format console
		level debug
	}

	{% if not caddy_https %}
	auto_https off
	{% endif %}

	{% if caddy_email %}
	email {{ caddy_email }}
	{% endif %}
}

{% if http_domain %}
:80 {
	{% if caddy_https %}
	redir https://{{ http_domain }}
	{% else %}
	redir http://{{ http_domain }}
	{% endif %}
}
{% endif %}

(common) {
	log
}

{% if caddy_entries %}
import Caddyfile.d/*.conf
{% endif %}

{% if caddy_extra is defined %}
{{ caddy_extra }}
{% endif %}
